mixin review(type, name, text, index)

    .review
        .review__inner(data-tabs-actions)
            .review__inner-top
                .review__inner-top-name= name
                .review__inner-top-tabs.tabs
                    if type === "default"
                        button(data-tab='video').tab.active
                            include ../icons/icon_review-video.svg
                        button(data-tab='text').tab
                            include ../icons/icon_review-text.svg
                    if type === "video"
                        button(data-tab='video').tab.active
                            include ../icons/icon_review-video.svg
                    if type === "text"
                        button(data-tab='text').tab.active
                            include ../icons/icon_review-text.svg

            .review__inner-content
                .tab-content(data-content='video')
                    video(muted='true' controls src='assets/images/demo.mp4')
                .tab-content(data-content='text')
                    p= text

            button(data-src=`#reviewPopup-${index + 1}` data-fancybox).btn-zoom.btn-zoom--in
        .review-popup(id=`reviewPopup-${index + 1}`)
            .review-popup__inner
                .review-popup-name= name
                .review-popup-text
                    p= text
                button(data-fancybox-close).btn-zoom.btn-zoom--out


