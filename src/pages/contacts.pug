extends ../layout/layout

block title
    - title = 'Контакты'
    - page = 'page-contacts'

block main
    include ../components/_breadcrumbs
    +breadcrumbs('Клиника', 'Контакты')
    section.contacts
        .container
            h1.not-main Отзывы
            .contacts__inner
                .contacts__inner-main
                    .contacts__inner-main-item
                        p Адрес
                        a(href='https://yandex.ru/maps/-/CHq26Glj' target='_blank' rel='noopener') Санкт-Петербург, ул. Смоленская, д. 14
                    .contacts__inner-main-item
                        p Телефон
                        a(href='tel:78129892424') + 7 812 989-24-24
                    .contacts__inner-main-item
                        p E-mail
                        a(href='mailto:info@domenname.ru') info@domenname.ru

                .contacts__inner-form
                    form
                        .contacts__inner-form-inputs
                            input(type='text' placeholder='Имя' required).input
                            input(type='text' placeholder='E-mail' required).input
                            input(type='text' placeholder='Телефон' data-phone-number required).input
                            textarea(placeholder='Комментарий').input
                        .contacts__inner-form-bottom
                            include ../components/_popup-agree
                            button.btn.btn--blue-dark Отправить сообщение

