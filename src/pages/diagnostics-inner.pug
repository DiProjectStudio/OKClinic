extends ../layout/layout

block title
    - title = 'Компьютерная томография брюшной полости'
    - page = 'page-diagnostics-inner'

block main
    include ../components/_breadcrumbs
    +breadcrumbs('Диагностика', 'Компьютерная томография', 'Компьютерная томография брюшной полости')
    .diagnostics-inner
        .container
            h1.not-main Компьютерная томография брюшной полости
            .diagnostics-inner__wrapper
                .diagnostics-inner__wrapper-leftside
                    .anchor-links
                        a(href='#about').anchor-link.active Об услуге
                        a(href='#what').anchor-link Что показывает
                        a(href='#indications').anchor-link Показания
                        a(href='#procedure').anchor-link Процедура
                    section.diagnostics-inner-about#about
                        .h2-title Об услуге
                        p.
                            Мультиспиральная компьютерная томография брюшной полости –
                            метод для уточнения патологии органов брюшной полости и
                            забрюшинного пространства. Путем послойного сканирования
                            создаются изображения и 3D-модели обследуемого участка.
                            Диагностика отличается высокой информативностью.
                            <br>
                            <br>
                            Метод позволяет исследовать: печень, желчный пузырь,
                            селезенку, поджелудочную железу с окружающими тканями,
                            протоками и сосудами, сосудистую систему брюшной полости,
                            лимфатические узлы в этой области.
                        .diagnostics-inner-about__image
                            +img('diagnostics-inner-image.jpg')

                    section.diagnostics-inner-what#what
                        .h2-title Что показывает компьютерная диагностика брюшной полости
                        ul.custom-list
                            li Расположение органов брюшной полости и их размеры
                            li Состояние тканей и сосудов паренхиматозных органов
                            li Наличие воспалительных процессов и их локализация
                            li Опухолевые образования
                            li Аномалии строения органов
                            li Острую хирургическую патологию (аппендицит, дивертикулит, и т.д.)
                            li Степень распространенности онкологического заболевания

                    section.diagnostics-inner-indications#indications
                        .h2-title Показания к проведению диагностики
                        ul.custom-list
                            li Патологии печени, поджелудочной железы, желчного пузыря, селезенки
                            li Заболевания органов брюшной полости (воспалительного, травматического генеза)
                            li Наличие воспалительных процессов и их локализация
                            li Острая хирургическая патология
                            li Аномалии строения органов
                            li Предстоящее оперативное вмешательство в области брюшной полости
                            li Диагностика другими методами не дала достоверных результатов

                    section.diagnostics-inner-procedure#procedure
                        .h2-title Как проходит процедура
                        .diagnostics-inner-procedure__items
                            - var n = 0;
                            while n < 4
                                .diagnostics-inner-procedure__item
                                    .diagnostics-inner-procedure__item-number= `${n + 1}`
                                    .diagnostics-inner-procedure__item-stage Этап
                                    .diagnostics-inner-procedure__item-text
                                        p.
                                            Lorem ipsum dolor sit amet consectetur. In in
                                            felis varius magnis. Cursus tellus risus urna in sit
                                            a sed risus.
                                - n++;

                    section.diagnostics-inner-price
                        .h2-title Цены на КТ брюшной полости
                        .diagnostics-inner-price__items
                            -
                                var services = [
                                    'МСКТ органов брюшной полости и забрюшинного пространства',
                                    'МСКТ органов брюшной полости и забрюшинного пространства с внутривенным болюсным контрастированием'
                                ]

                            include ../components/_price-card
                            each service in services
                                +priceCard(service)

                    section.diagnostics-inner-specialists
                        .diagnostics-inner-specialists__top
                            .h2-title Наши специалисты
                            .swiper-nav
                                button.arrow-prev
                                button.arrow-next
                        .diagnostics-inner-specialists__swiper.swiper
                            -
                                var specialists = [
                                    {
                                        name: "Филиппов Александр Олегович",
                                        specialization: "Врач - невролог, врач - остеопат"
                                    },
                                    {
                                        name: "Гиоева Лаура Валерьевна",
                                        specialization: "Невролог"
                                    },
                                    {
                                        name: "Егорова Екатерина Сергеевна",
                                        specialization: "Невролог, Кандидат медицинских наук"
                                    },
                                    {
                                        name: "Катенина Светлана Петровна",
                                        specialization: "Терапевт, гастроэнтеролог"
                                    }
                                ]
                            .swiper-wrapper
                                include ../components/_doctor-card
                                each specialist, index in specialists
                                    .swiper-slide
                                        +doctor-card(index, specialist.name, specialist.specialization)




                .diagnostics-inner__wrapper-rightside
                    .rightside-content
                        .rightside-content__top
                            .rightside-content__top-title Код 101.111.11
                            ul.custom-list
                                li 1 рабочий день
                                li Сдается в клинике
                        .rightside-content__bottom
                            .rightside-content__bottom-price
                                p от 1500 ₽
                                p Доп услуга: 2000 ₽
                            .rightside-content__bottom-buttons
                                a(href='javascript:void(0)').btn.btn--blue-dark Запись на прием
                                a(href='javascript:void(0)').btn.btn--gray-subdied Пример результата

    .diagnostics-inner-feedback
        include ../components/_feedback


