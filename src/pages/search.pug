extends ../layout/layout

block title
    - var title = 'Результаты поиска'
    - var page = 'page-search'

block main
    include ../components/_breadcrumbs
    section.search
        +breadcrumbs('Результаты поиска')
        .container
            h1.not-main Вы искали
            .search__inner
                .search__inner-search
                    form
                        .input-wrapper.has--close-btn
                            input(type='text' placeholder='Поиск по сайту').input
                            span
                        button.btn.btn--blue-dark Найти
                .search__inner-filter.filter-tabs
                    a(href='javascript:void(0)').filer-item.filter-tab.active Все
                    a(href='javascript:void(0)').filer-item.filter-tab Болезни
                    a(href='javascript:void(0)').filer-item.filter-tab Симптомы
                    a(href='javascript:void(0)').filer-item.filter-tab Услуги
