                    a(href='javascript:void(0)').filer-item.filter-tab Новости
                    a(href='javascript:void(0)').filer-item.filter-tab Статьи
                .search__inner-results
                    a(href='javascript:void(0)').result-item
                        .result-item__name Головная боль
                        .result-item__tag.tag Болезнь
                    a(href='javascript:void(0)').result-item
