extends ../layout/layout

block title
    - var title = 'Анализы'
    - var page = 'page-tests'

block main
    include ../components/_breadcrumbs
    +breadcrumbs('Анализы')
    .tests-wrapper
        .container
            h1.not-main Сдать анализы в СПБ
            .tests-wrapper__inner
                .tests-wrapper__inner-leftside
                    include ../components/_dropdown
                    -
                        var dropdown = {
                            title: 'Анализы',
                            content: [
                                "COVID-19", "Аллергология", "Бактериологические исследования",
                                "Биохимические исследования",
                                "Гинекологические анализы, выполняемые в сторонней лаборатории",
                                "Диагностика аутоиммунных заболеваний", "Диагностика инфекций",
                                "Исследование обменов (белковый, азотистый, пигментный, липидный, углеводный)",
                                "Исследования гормонов",
                                "Коагулологические исследования (Исследования свертывающей системы крови)",
                                "Лекарственный мониторинг", "Маркер сердечной недостаточности",
                                "Маркер нарушения инкреторной функции поджелудочной железы (диагностика и мониторирование сахарного диабета)",
                                "Микроскопические исследования", "Молекулярно-биологические исследования",
                                "Общеклинические исследования биологических жидкостей",
                                "Общеклинические исследования крови, мочи, кала",
                                "Общеклинические исследования мокрот",
                                "Онкомаркеры", "Определение групп крови",
                                "Определение сывороточных иммуноглобулинов",
                                "Оценка гуморального и клеточного иммунитета",
                                "Серологические исследования", "Цитологические исследования",
                                "Экспресс-тесты"
                            ],
                            href: 'tests-category.html'
                        }
                    +dropdown(dropdown.title, dropdown.content, dropdown.href)
                .tests-wrapper__inner-main
                    section.tests-popular
                        .h2-title Популярные анализы
                        .tests-popular__items
                            - var n = 4;
                            while n > 0
                                include ../components/_test-card
                                - n--;
                        .tests-popular__text
                            p.
                                Головная боль может быть индикатором целого ряда
                                различных проблем, от таких незначительных, как
                                неправильно подобранные очки, до серьезных (например,
                                опухоль головного мозга). Ежегодно головная боль
                                становится причиной временной утраты трудоспособности
                                примерно у 40% взрослого населения. В настоящее время
                                специалисты насчитывают свыше 300 причин ее появления.

                    section.tests-promo
                        .h2-title Акции
                        .tests-promo__items
                            -
                                var promos = [
                                    {
                                        title: 'Скидка до 20% на комплексное обследование',
                                        description: 'Существенная экономия времени и денег'
                                    },
                                    {
                                        title: 'Анализ COVID-19 -5%',
                                        description: 'Выявление РНК коронавируса SARS-CoV-2, включая британский и южноафриканские штаммы'
                                    },
                                    {
                                        title: 'Пенсионерам и инвалидам скидка 5% ',
                                        description: 'Пенсионеры и инвалиды всех постоянная скидка'
                                    },
                                ]
                            include ../components/_promo-card
                            each promo, index in promos
                                +promoCard(promo.title, promo.description, index)

                    section.tests-faq
                        .h2-title Вопрос ответ
                        .tests-faq__items
                            -
                                var faqItems = [
                                    'Почему при гемолизе некоторые тесты были выполнены? Почему не все тесты выполнены при гемолизе образца?',
                                    'Почему результаты разных лабораторий не совпадают?',
                                    'Как подготовиться к анализу?',
                                    'Можно ли получить анализ на электронную почту?'
                                ]

                            include ../components/_faq-card
                            each faqItem in faqItems
                                +faqCard(faqItem)


